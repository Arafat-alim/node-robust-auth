{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/$1" },
    { "source": "/(.*)", "destination": "/src/$1" }
  ],
  "builds": [
    {
      "src": "server/src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server/src/index.js"
    }
  ]
}
